<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0078BF"
    tools:context=".TaskActivity">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idEditTaskTitle"
    android:textColor="@color/white"
    android:hint="Enter Task Title"
    android:textSize="30sp"
    android:textColorHint="@color/white"
    android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/idTaskEditDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start|top"
        android:hint="Enter a task description"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textColor="@color/white"
        android:layout_below="@id/idEditTaskTitle"
        android:layout_above="@id/idBtnAddUpdateTask"
        android:textSize="30sp"
        android:textColorHint="@color/white"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idBtnAddUpdateTask"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:text="Button"
        android:textSize="30sp"
        android:background="@drawable/custom_savebutton"
        android:textAllCaps="false"/>











</RelativeLayout>